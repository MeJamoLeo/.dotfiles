!
! Swap Alt and Win_key
!
remove mod1 = Alt_L
remove mod4 = Super_L
keysym Super_L = Alt_L
keysym Alt_L = Super_L
add mod1 = Alt_L
add mod4 = Super_L

!
! Swap Caps_Lock and Control_L
!
clear lock
clear control
add control = Caps_Lock Control_L Control_R
keycode 66 = Control_L Control_L NoSymbol NoSymbol
keycode 37 = Escape
keycode   9 = Escape Caps_Lock Escape
